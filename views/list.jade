extends layout

block content
  h1= title
  .accordion#webshots
    each webshot, i in webshots
      .accordion-group
        .accordion-heading
          a.accordion-toggle(data-toggle='collapse', data-parent='#webshots', href='#webshot'+i) #{webshot.fileName}
        .accordion-body.collapse(id='webshot'+i)
          .accordion-inner
            a(href='https://s3.amazonaws.com/screenshotter-bucket/'+webshot.fileName)
              i.icon-download
              | - Download
            span(data-key=webshot.fileName)
              i.icon-delete
              | - Delete